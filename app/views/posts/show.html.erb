<h1>Post</h1>

<%= @post.title %>
<hr>
<%= @post.body %>
<hr>
<%= "Category: " + @post.category %>
<!-- Display the user  -->
<% if @post.user != nil %>
  <hr>
  <%= "Created By: " + @post.user.first_name %>
  <hr>
<% end %>

