<h1>Edit Post</h1>

<% @post.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>

<%= simple_form_for @post do |f| %>
  <%= f.input :title %>
  <%= f.input :body %>
  <%= f.button :submit, class:"btn btn-primary" %>
<% end %>



